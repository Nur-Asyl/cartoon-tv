<!-- recently-viewed.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recently Viewed Cartoons</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <style>
        /* Add your custom styles here */
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-4">Recently Viewed Cartoons</h1>
        <div class="row">
            <% recentlyViewedCartoons.forEach(cartoon => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= cartoon.poster_path ? `https://image.tmdb.org/t/p/w500${cartoon.poster_path}` : 'https://via.placeholder.com/1080x1580' %>" class="card-img-top" alt="<%= cartoon.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= cartoon.name %></h5>
                            <p class="card-text">Rating: <%= cartoon.vote_average %></p>
                            
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
