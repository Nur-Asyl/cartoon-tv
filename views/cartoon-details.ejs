<!-- cartoon-details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartoon Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 800px;
            margin: 50px auto;
        }
        .poster-container {
            position: relative;
            margin-bottom: 30px;
        }
        .poster {
            width: 100%;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 20px;
            box-sizing: border-box;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .poster-container:hover .overlay {
            opacity: 1;
        }
        .title {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .info {
            color: #fff;
            font-size: 16px;
            line-height: 1.6;
        }
        .back-btn {
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-size: 18px;
            text-transform: uppercase;
            margin-top: 30px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .back-btn:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="poster-container">
            <img src="<%= cartoon.poster_path ? `https://image.tmdb.org/t/p/w500${cartoon.poster_path}` : 'https://via.placeholder.com/1080x1580' %>" class="poster" alt="<%= cartoon.name %>">
            <div class="overlay">
                <div class="title"><%= cartoon.name %></div>
                <div class="info">Rating: <%= cartoon.vote_average %></div>
                <div class="info">Adult: <%= cartoon.adult ? 'Yes' : 'No' %></div>
                <div class="info">Overview: <%= cartoon.overview %></div>
                <div class="info">Popularity: <%= cartoon.popularity %></div>
                <div class="info">First Air Date: <%= cartoon.first_air_date %></div>
                <div class="info">Vote Count: <%= cartoon.vote_count %></div>
            </div>
        </div>
        <button class="back-btn" onclick="window.history.back()">Go Back</button>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
