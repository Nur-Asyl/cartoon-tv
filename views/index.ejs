<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartoons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Include Google Translate API -->
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <style>
        .carousel-control-prev,
        .carousel-control-next {
            width: 50px; 
            height: 50px; 
            top: 50%; 
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            font-size: 2rem; 
        }

        .carousel-control-prev {
            left: 0; 
            border-top-right-radius: 0; 
            border-bottom-right-radius: 0; 
        }

        .carousel-control-next {
            right: 0;
            border-top-left-radius: 0; 
            border-bottom-left-radius: 0;
        }

        .card-body {
            height: 150px; 
            overflow: hidden; 
        }

        .card-img-top {
            object-fit: fill;
            height: calc(500px); 
        }
    </style>

    <script src="https://kit.fontawesome.com/8064f71e7b.js" crossorigin="anonymous"></script>
</head>
<body style="background-color: black;">
    <!-- Navbar -->
    <%- include("partials/navbar") %>

    <!-- Main Content -->
    <div class="container">
        <h1 class="mt-5 mb-3 text-white">Cartoons</h1>
        <!-- Cartoons Carousel -->
        <div id="cartoonsCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Include cartoons carousel items -->
                <% for (let i = 0; i < cartoons.length; i += 3) { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j = i; j < i + 3 && j < cartoons.length; j++) { %>
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow">
                                        <a href="/cartoons/<%= cartoons[j].id %>">
                                            <img src="<%= cartoons[j].posterPath %>" class="card-img-top rounded-top" alt="<%= cartoons[j].name %>">
                                        </a>
                                        <div class="card-body text-center text-white" style="background-color: black;">
                                            <h5 class="card-title"><%= cartoons[j].name %></h5>
                                            <p class="card-text">Rating: <%= cartoons[j].rating %></p>
                                            <p class="card-text"><%= cartoons[j].genres %></p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#cartoonsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#cartoonsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <h1 class="mt-5 mb-3 text-white">News</h1>
        <!-- News Carousel -->
        <div id="newsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% for (let i = 0; i < newsArticles.length; i += 3) { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j = i; j < i + 3 && j < newsArticles.length; j++) { %>
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow">
                                        <a href="<%= newsArticles[j].url %>">
                                            <img src="<%= newsArticles[j].urlToImage %>" class="card-img-top rounded-top" alt="<%= newsArticles[j].title %>">
                                        </a>
                                        <div class="card-body text-center text-white" style="background-color: black;">
                                            <h5 class="card-title"><%= newsArticles[j].title %></h5>
                                            <p class="card-text"><%= newsArticles[j].description %></p>
                                            <a href="<%= newsArticles[j].url %>" class="btn btn-primary">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    
</body>
</html>
